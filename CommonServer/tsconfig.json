{
  "files": [
    "./src/main.ts",
    "./src/MiscClass.ts",
    "./src/DunesGame.ts",
    "./src/MiscOther.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    //"module": "amd",//newly added
    "outFile": "./build/index.js",
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "typeRoots": [
      "./node_modules"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.collection"
    ]
  }
}
